{% extends 'AppBundle::base.html.twig' %}
{% block title %}{{ 'contact.title'|trans }}{% endblock %}
{% block content %}
    <h2>{{ 'contact.title'|trans }}</h2>
    <div>
        <p>{{ 'contact.failure'|trans }}</p>
        {% if message == true %}
            <p>{{ 'contact.failure_message'|trans }}</p>
            <p>{{ message }}</p>
        {% endif %}
    </div>    
{% endblock %}
