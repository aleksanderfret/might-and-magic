   {% trans_default_domain 'FOSUserBundle' %}
    <div>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            {% endif %}
    </div>
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'} }) }}


    {{ form_errors(form) }}
    <div>
        {{ form_label(form.name, '', {'attr': {'class': 'name-label'} }) }}
        {{ form_widget(form.name, { 'attr': {'class': 'name-control' } }) }}
        {{ form_errors(form.name) }}
    </div>
    <div>
        {{ form_label(form.surname, '', {'attr': {'class': 'surname-label'} }) }}
        {{ form_widget(form.surname, { 'attr': {'class': 'surname-control' } }) }}
        {{ form_errors(form.surname) }}
    </div>
    <div>
        {{ form_label(form.username, '', {'attr': {'class': 'username-label'} }) }}
        {{ form_widget(form.username, { 'attr': {'class': 'username-control' } }) }}
        {{ form_errors(form.username) }}
    </div>      
    <div>
        {{ form_label(form.email, '', {'attr': {'class': 'email-label'} }) }}
        {{ form_widget(form.email, { 'attr': {'class': 'email-control' } }) }}
        {{ form_errors(form.email) }}
    </div>
    <div>
        {{ form_label(form.plainPassword.first, '', {'attr': {'class': 'password-label'} }) }}
        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'password-control' } }) }}
        {{ form_errors(form.plainPassword.first) }}
    </div>
    <div>
        {{ form_label(form.plainPassword.second, '', {'attr': {'class': 'password-label'} }) }}
        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'password-control' } }) }}
    </div>
    <div>
        {{ form_label(form.avatar, '', {'attr': {'class': 'avatar-label'} }) }}
        {{ form_widget(form.avatar, { 'attr': {'class': 'avatar-control' } }) }}
        {{ form_errors(form.avatar) }}
    </div>
    <div>
        <input type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
{{ form_end(form) }}
